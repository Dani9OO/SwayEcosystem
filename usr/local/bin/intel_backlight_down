#!/bin/sh

path=/sys/class/backlight/intel_backlight

brightness() {
        cat "$path"/actual_brightness
}

factor() {
        expr $(max) / 10
}

max() {
        cat "$path"/max_brightness
}

# echo "actual_brightness = $(brightness) , max_brightness = $(max) , factor = $(f>

echo $(( $(brightness) - $(factor) )) > "$path"/brightness

makoctl dismiss --all
makoctl reload
notify-send --icon=notification-display-brightness brightness
