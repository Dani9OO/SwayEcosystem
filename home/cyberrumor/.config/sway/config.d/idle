exec swayidle -w \
	timeout 600 'grim ~/.cache/screenshot.png && \
		convert ~/.cache/screenshot.png -blur 0x4 ~/.cache/blurshot.png && \
		rm ~/.cache/screenshot.png && \
		swaylock -i ~/.cache/blurshot.png' \
	timeout 1200 'swaymsg "output * dpms off"' \
		resume 'swaymsg "output * dpms on"' \
	before-sleep 'grim ~/.cache/screenshot.png && \
		convert ~/.cache/screenshot.png -blur 0x4 ~/.cache/blurshot.png && \
		rm ~/.cache/screenshot.png && \
		swaylock -i ~/.cache/blurshot.png'
